{{>layouts/header}}
{{#attendance}}
    <form class="container" action="/attendance/update" method="post">
        <input name="id" type="hidden" value="{{id}}">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="employeeName" value="{{employeeName}}">
        </div>
        <div class="mb-3">
            <label class="form-label">Employee ID</label>
            <input type="text" class="form-control" name="employeeID" value="{{employeeID}}">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/attendance/{{id}}" class="btn btn-primary">Back</a>
    </form>
{{/attendance}}
{{>layouts/footer}}